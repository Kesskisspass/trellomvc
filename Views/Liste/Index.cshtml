@{
    ViewData["Title"] = "Liste Listes";
}
@* @model Liste; *@
<h1>@ViewData["Title"]</h1>
<div>
    <a asp-controller="Liste" asp-action="Add">Ajout Liste</a>
    <hr>
    <div>
@if(Model.Count == 0)
{
    <div class="alert alert-danger" role="alert">
        Il n'y pas de liste enregistr√©e
    </div>
}

else
{
    @foreach (var item in Model)
    {
        <div>
            <p>Nom de la liste : <span class="fw-bold">@item.Nom</span> </p>
            <a asp-controller="Liste" asp-action="Detail" asp-route-Id="@item.Id">Detail</a>
            <ul>

                @foreach (var carte in item.Cartes)
                {
                    <li>Titre carte : @carte.Titre</li>
                }
            </ul>
            <hr>
        </div>
    }
}