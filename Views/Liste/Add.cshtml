@model Liste
<h1>Ajout Liste</h1>
@if(UtilisateurController.userAuthenticated == null)
{
    <div class="alert alert-danger" role="alert">
        Vous devez être connecté pour créer une liste.
    </div>
}
else
{
    <form action="/Liste/Add" method="post" class="col-xl-4 col-lg-6">
        <div class="form-group mb-3">
            <label for="Nom">(ID: @Model.Id) - Nom de la liste</label>
            <input type="text" class="form-control" name="Nom" id="Nom" placeholder="Nom de la liste">
        </div>
        <div class="form-group mb-3">
            <label for="IdProjet">Id projet</label>
            <div class="col-4">
                <input type="number" class="form-control" name="IdProjet" id="IdProjet" placeholder="ID du projet"></input>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Créer la liste</button>
    </form>
}