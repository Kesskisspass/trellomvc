@model Projet
<h1>Création d'un nouveau Projet</h1>
@if(UtilisateurController.userAuthenticated == null)
{
    <div class="alert alert-danger" role="alert">
        Vous devez être connecté pour créer un projet.
    </div>
}
else
{
    <form action="/Projet/Add" method="post" class="col-xl-4 col-lg-6">
        <div class="form-group mb-3">
            <label for="Nom">Nom du projet</label>
            <input type="text" class="form-control" name="Nom" id="Nom" placeholder="Nom du projet">
        </div>
        <div class="form-group mb-3">
            <label for="Contenu">Description du projet (optionnel)</label>
            <input type="text" class="form-control" name="Contenu" id="Contenu" placeholder="Description du projet">
        </div>
        <button type="submit" class="btn btn-primary">Créer</button>
    </form>
}