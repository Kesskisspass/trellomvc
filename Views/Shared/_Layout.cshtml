<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trello</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/trellomvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand"  asp-controller="Home" asp-action="Index">Trello</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark"  asp-controller="Utilisateur" asp-action="Index">Utilisateurs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark"  asp-controller="Liste" asp-action="Index">Listes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark"  asp-controller="Carte" asp-action="Index">Cartes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark"  asp-controller="Projet" asp-action="Index">Projets</a>
                        </li>
                        @if(UtilisateurController.userAuthenticated != null)
                        {
                            <li>
                                <a class="nav-link text-dark"  href="/Utilisateur/Mesprojets/@UtilisateurController.userAuthenticated.Id">Mes Projets</a>
                            </li>
                        }

                    </ul>
                        @if(UtilisateurController.userAuthenticated == null)
                        {
                            <div>
                                <a asp-controller="Utilisateur" asp-action="Add">S'inscrire</a>
                                
                                <a asp-controller="Utilisateur" asp-action="Login" class="btn btn-primary">Se connecter</a>
                            </div>
                        }
                        else
                        {
                            <div>
                                <span class="text-bold">@UtilisateurController.userAuthenticated.Nom </span>
                                
                                <a asp-controller="Utilisateur" asp-action="Logout" class="btn btn-danger">Se déconnecter</a>
                            </div>
                        }

                    @* </ul> *@
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
