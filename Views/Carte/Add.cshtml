@model Carte
<h1>Ajout Carte</h1>
@if(UtilisateurController.userAuthenticated == null)
{
    <div class="alert alert-danger" role="alert">
        Vous devez être connecté pour créer une carte.
    </div>
}
else
{
    <form action="/Carte/Add" method="post" class="col-xl-4 col-lg-6">
        <div class="form-group mb-3">
            <label for="Titre">Titre de la Carte</label>
            <input type="text" class="form-control" name="Titre" id="Titre" placeholder="Titre de la carte">
        </div>
        @* <div class="form-group mb-3">
            <label for="Contenu">Contenu de la tâche (optionnel)</label>
            <input type="text" class="form-control" name="Contenu" id="Contenu" placeholder="Contenu de la tâche">
        </div> *@
        <div class="form-group mb-3">
            <label for="IdListe">Id liste</label>
            <div class="col-6">
                <input type="number" class="form-control" name="IdListe" id="IdListe" placeholder="ID de la liste associée"></input>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Créer la carte</button>
    </form>
}