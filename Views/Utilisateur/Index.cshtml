@{
    ViewData["Title"] = "Liste utilisateurs";
}
@* @model Utilisateur; *@
<div>
    <a asp-controller="Utilisateur" asp-action="Add">Ajout Utilisateur</a>

</div>
@if(Model.Count == 0)
{
    <div class="alert alert-danger" role="alert">
        Il n'y pas d'utilisateur enregistr√©
    </div>
}

else
{
    <div class="col-6 m-auto">
    
        <table class="table table-striped">
            <thead>
                <tr>

                    <th>
                        Nom
                    </th>

                    <th>
                        Email
                    </th>

                    <th>
                        Detail
                    </th>
                    <th>
                        Modifier
                    </th>
                    <th>
                        Supprimer
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                        <td style="font-weight:bold;">
                            @item.Nom
                        </td>
                        <td>
                            @item.Email
                        </td>

                        <td>
                            <a asp-controller="User" asp-action="Detail" asp-route-Id="@item.Id">Detail</a>
                        </td>
                        <td>
                            <a asp-controller="User" asp-action="Edit" asp-route-Id="@item.Id">Modifier</a>
                        </td>
                        <td>
                            <a asp-controller="User" asp-action="Delete" asp-route-Id="@item.Id">Supprimer</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}