@{
    ViewData["Title"] = "Ajout Utilisateur";
}
<h1>@ViewData["Title"]</h1>

<form method="post" action="/User/Add" class="col-xl-4 col-lg-6" >
    <div class="mb-3">
        <label class="form-label" for="name">Nom</label>
        <input class="form-control" type="text" name="name" id="name" placeholder="Nom">
    </div>
    <div class="mb-3">
        <label class="form-label" for="password">Mot de passe</label>
        <input class="form-control" type="password" name="password" id="password" placeholder="Mot de passe">
    </div>
    <div class="mb-3">
        <label class="form-label" for="name">Email</label>
        <input class="form-control" type="email" name="email" id="email" placeholder="votre email">
    </div>
    <button type="submit" class="btn btn-primary">Ajouter</button>
</form>